<div class="btn">
    <h1>Chọn màu chữ</h1>
    <button data-value="red">Đỏ</button>
    <button data-value="blue">Xanh</button>
    <button data-value="yellow">Vàng</button>
    <button data-value="gray">Ghi</button>
    <button data-value="purple">Tím</button>

    <p>Đây là Hồ Tùng</p>
    
</div>

@section DinhQuangHungScripts{
    <script>
        console.log("Haha");
        $(document).ready(function(){
            console.log("running...");
            $('.btn button').each(function(){
                let valColor = $(this).attr('data-value');
                $(this).css({
                    'border': '2px solid' + valColor,
                    'color': valColor,
                    'width': '100px'
                })
                .click(function(){
                    $('p').css('background', valColor);
                })
            })
        })
    </script>
}